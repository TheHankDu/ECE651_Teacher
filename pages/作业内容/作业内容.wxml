<view class="doc-content">
  <input placeholder="Description:" bindinput='UserInput'></input>
</view>
<view class="hr"></view>

<view>
  <button formType='submit' class="upload" bindtap='Upload'>Upload</button>
</view>

<view>
  <button class="Home" ontap="Home">{{Home}}</button> 
</view>



